<div class="row">
   <div class="col-md-4 col-md-offset-4 text-center">
     <h2>Rénitialiser le mot de passe</h2>

     <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
       <%= render 'shared/devise_errors' %>

       <div class="form-group">
       <p>saisissez l'adresse e-mail associée à votre compte.
       nous vous enverrons un lien par e-mail pour réinitialiser votre mot de passe.</p>
         <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control",placeholder:"E-mail" %>
       </div>

       <div class="actions">
         <%= f.submit "Envoyer un lien de réinitialisation",class:"btn btn-primary" %>
       </div>
     <% end %>






</div>
